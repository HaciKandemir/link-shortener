<ul class="navbar-nav ml-auto nav">
    {% if app.user %}
        {% if is_granted('ROLE_USER') %}
            <li class="nav-item">
                <a class="nav-link" href="/profile/user"><span class="fa fa-user"></span> Profil</a>
            </li>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
            <li class="nav-item">
                <a class="nav-link" href="/panel"><span class="fa fa-solar-panel"></span> Panel</a>
            </li>
        {% endif %}
        <li class="nav-item">
            <a class="nav-link" href="/logout"><span class="fa fa-sign-out-alt"></span> Çıkış Yap</a>
        </li>
    {% else %}
        {% if app.request.pathinfo|trim('/') != "register" %}
            <li class="nav-item">
                <a class="nav-link" href="/register"><span class="fa fa-user"></span> Kayıt Ol</a>
            </li>
        {% endif %}
        {% if app.request.pathinfo|trim('/') != "login" %}
            <li class="nav-item">
                <a class="nav-link" href="/login"><span class="fa fa-sign-in-alt"></span> Giriş Yap</a>
            </li>
        {% endif %}
    {% endif %}
</ul>