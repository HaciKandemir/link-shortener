{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block header %} {% include 'inc/header.html.twig' %} {% endblock %}

{% block section %}
    <section class="hero-container" style="background-image: url('{{ inSite.getBanner.getImagePath }}');">
            <div class="hero-wrap">
                <div class="hero-content col-md-9 mx-auto">
                    <div class="cell col-md-8">
                        <h1>{{ inSite.getBanner.getSlogan }}</h1>
                        <h2>{{ inSite.getBanner.getDescription }}</h2>
                        <p>
                            <a href="" class="btn btn-primary">Ücretsiz Başlayın</a>
                            <br>
                            <a href="">Teklif Alın</a>
                        </p>
                    </div>
                </div>
            </div>
    </section>
{% endblock %}

{% block body %}
    <div class="content">
        <section class="url-shorten-row py-4">
            <div class="col-md-9 mx-auto">
                <div class="form-container ml-3 mr-4">
                    <form action="" method="post" class="form-inline" onsubmit="return createShortUrl()">
                        <div class="px-0 pr-md-3 mb-2 mb-md-0 col-md-9 col-12">
                            <input type="url" class="w-100 form-control form-control-lg"
                                   autocomplete="off" value="https://test.com" id="urlInput" name="urlInput" placeholder="https://">
                        </div>
                        <button type="submit" id="shortenButton" class="btn btn-primary btn-lg col-md-3 col-12">Kısalt</button>
                    </form>
                    <p class="text-center pr-lg-5 mb-0 mt-1">
                        {%- autoescape -%}
                            {{- inSite.getTermsOfUse.getShortenerForm|raw -}}
                        {%- endautoescape -%}
                    </p>
                    <div id="shorten-alert" class="mt-2 alert alert-danger text-center d-none">
                        <span class="font-weight-bold">Hata!</span>
                    </div>
                </div>
            </div>
        </section>

        <section class="d-block my-5">
            <div class="col-md-9 mx-auto">
                <h3 class="text-center features-slogan">Markanıza geri dönüş sağlayan link kısaltıcı</h3>
                <h4 class="text-center features-slogan-description">
                    Markanız saklanmak için yaratılmadı. %34 daha fazla
                    tıklama sağlayan markalı bağlantılarla öne çıkmasına yardımcı olun.
                </h4>

                <div class="row mt-6">
                    {% for feature in inSite.getFeatures %}
                        <div class="px-4 col-10 mx-auto col-md-4">
                            <img class="features-image img-fluid mb-3" src="{{ feature.getImagePath }}" />
                            <h5 class="features-title font-weight-bold">{{ feature.getTitle }}</h5>
                            <p class="features-description">{{ feature.getDescription }}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>

        <section class="py-5">
            <div class="col-md-10 mx-auto">
                <h3 class="text-center happy-customers-text">The most recognized brands in the world love Bitly</h3>
                <div class="d-flex flex-wrap justify-content-center happy-customers">
                    {% for customer in inSite.getCustomers %}
                        <img class="px-3 customers-image" src="{{ customer.getImagePath }}">
                    {% endfor %}
                </div>
            </div>
        </section>

    </div>
{% endblock %}

{% block footer %}{% endblock %}
