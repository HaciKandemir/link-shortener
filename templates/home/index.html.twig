{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block header %} {% include 'inc/header.html.twig' %} {% endblock %}

{% block section %}
    <section class="hero-container">
            <div class="hero-wrap">
                <div class="hero-content col-md-9">
                    <div class="cell col-md-8">
                        <h1>Kısa bağlantılar, büyük sonuçlar</h1>
                        <h2>Markanızı büyütmenize ve korumanıza yardımcı olacak güçlü araçlarla oluşturulmuş bir URL kısaltıcı.</h2>
                        <p>
                            <a href="" class="btn btn-primary">Ücretsiz Başlayın</a>
                            <br>
                            <a href="">Teklif Alın</a>
                        </p>
                    </div>
                </div>
            </div>
    </section>
{% endblock %}

{% block body %}
    <div class="content">
        <section class="url-shorten-row py-4">
            <div class="col-md-10 mx-auto">
                <div class="px-1">
                    <form action="" class="form-inline">
                        <div class="ml-lg-5 mr-lg-3 col-md-8 col-sm-12">
                            <input style="width: 100%" type="url" class="form-control form-control-lg" autocomplete="off" name="url" placeholder="https://">
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg col-md-3 col-10 mx-auto">Kısalt</button>
                    </form>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

{% block footer %}{% endblock %}
