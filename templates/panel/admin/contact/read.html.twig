{% extends 'panel/base2.html.twig' %}

{% block sidebar %}
    {% include 'panel/inc/sidebar.html.twig' %}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="col-md-12 d-flex">
                        <h4 class="card-title"> Message </h4>
                    </div>
                </div>
                <div class="card-body pt-0">
                    <div class="col-9 col-lg-7 mx-auto mt-5">
                        <div class="row">
                            <div class="form-group col-md-4">
                                <h6>Email</h6>
                                <p>{{ message.getSender }}</p>
                            </div>
                            <div class="form-group col-md-3">
                                <h6>Username</h6>
                                <p>{{ message.getUsername }}</p>
                            </div>
                            <div class="form-group col-md-5">
                                <h6>Subject</h6>
                                <p>{{ message.getSubject }}</p>
                            </div>
                        </div>


                        <div class="form-group">
                            <h6>Message</h6>
                            <p>{{ message.getMessage }}</p>
                        </div>
                        <div class="form-group">
                            <a href="{{ path('panel_contact_delete', {id:message.getId}) }}"
                               class="btn btn-fill btn-danger">Sil</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}