{% extends 'panel/base2.html.twig' %}

{% block sidebar %}
    {% include 'panel/inc/sidebar.html.twig' %}
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-category">Top 10 Browser</h5>
            </div>
            <div class="card-body pt-0">
                <table class="table text-center">
                    <thead>
                    <tr>
                        <th>Browser</th>
                        <th>Count</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for browser_data, count in top_browsers %}
                        {% set browser = browser_data|split(' ')|last|split('/')|first  %}
                        <tr>
                            <td>{{- browser_data -}}</td>
                            <td>{{- count -}}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-category">Top 10 Language</h5>
            </div>
            <div class="card-body pt-0">
                <table class="table text-center">
                    <thead>
                    <tr>
                        <th>Language</th>
                        <th>Count</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for lang in top_lang %}
                        <tr>
                            <td>{{ lang.lang }}</td>
                            <td>{{ lang.count }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-category">Top 10 User</h5>
            </div>
            <div class="card-body pt-0">
                <table class="table text-center">
                    <thead>
                    <tr>
                        <th>Device</th>
                        <th>Count</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in top_user %}
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.count }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-category">Top 10 Shortener Url</h5>
            </div>
            <div class="card-body pt-0">
                <table class="table text-center">
                    <thead>
                    <tr>
                        <th>Shortener Url</th>
                        <th>Count</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for top_shorten in top_shorten_domain %}
                        <tr>
                            <td>{{ top_shorten.url|replace({'http://' : '', 'https://' : ''}) }}</td>
                            <td>{{ top_shorten.count }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}