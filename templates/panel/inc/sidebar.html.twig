{% set current_path = app.request.get('_route') %}
<div class="sidebar" data-color="yellow">
    <div class="logo">
        <a href="/panel" class="simple-text text-center logo-normal">
            <img src="{{ asset('assets/img/logo.png') }}" alt="haci">
        </a>
    </div>
    <div class="sidebar-wrapper" id="sidebar-wrapper">
        <ul class="nav">
            <li{% if current_path=='profile_settings'%} class="active" {% endif %}>
                <a href="{{ path('profile_settings') }}">
                    <i class="now-ui-icons users_single-02"></i>
                    <p>User Profile</p>
                </a>
            </li>
            <li{% if current_path=='user_url_stats'%} class="active" {% endif %}>
                <a href="{{ path('user_url_stats') }}">
                    <i class="now-ui-icons business_chart-pie-36"></i>
                    <p>Your Urls Stats</p>
                </a>
            </li>

            {% if is_granted('ROLE_ADMIN') %}
            <li>
                <a data-toggle="collapse" href="#adminMenu">
                    <i class="now-ui-icons objects_key-25"></i>
                    <p>Admin <b class="caret"></b></p>
                </a>

                <div class="collapse " id="adminMenu">
                    <ul class="nav">
                        <li{% if current_path=='url_panel'%} class="active" {% endif %}>
                            <a href="{{ path('url_panel') }}">
                                <span class="sidebar-mini-icon">U</span>
                                <span class="sidebar-normal"> Urls Panel </span>
                            </a>
                        </li>
                        <li{% if current_path=='panel_admin_user'%} class="active" {% endif %}>
                            <a href="{{ path('panel_admin_user') }}">
                                <span class="sidebar-mini-icon">U</span>
                                <span class="sidebar-normal"> Users Panel </span>
                            </a>
                        </li>
                        <li{% if current_path=='panel_admin_top'%} class="active" {% endif %}>
                            <a href="{{ path('panel_admin_top') }}">
                                <span class="sidebar-mini-icon">T</span>
                                <span class="sidebar-normal"> Top 10 </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </li>
                <li>
                    <a data-toggle="collapse" href="#siteSettings">
                        <i class="now-ui-icons loader_gear"></i>
                        <p>Site Settings <b class="caret"></b></p>
                    </a>
                    <div class="collapse " id="siteSettings">
                        <ul class="nav">
                            <li{% if current_path=='admin_site_setting_banner'%} class="active" {% endif %}>
                                <a href="{{ path('admin_site_setting_banner') }}">
                                    <i class="now-ui-icons design_image"></i>
                                    <p>Banner</p>
                                </a>
                            </li>
                            <li{% if current_path=='admin_site_setting_banner'%} class="active" {% endif %}>
                                <a href="{{ path('admin_features') }}">
                                    <i class="fas fa-rocket"></i>
                                    <p>Features</p>
                                </a>
                            </li>
                            <li {% if current_path=='admin_site_setting_privacy'%} class="active" {% endif %}>
                                <a href="{{ path('admin_site_setting_privacy') }}">
                                    <i class="now-ui-icons ui-1_lock-circle-open"></i>
                                    <p>Privacy</p>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
            {% endif %}
        </ul>
    </div>
</div>